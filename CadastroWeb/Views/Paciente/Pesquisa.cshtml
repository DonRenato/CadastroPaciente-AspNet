                <table class="table">
                    <tr>
                        <td>Nome</td>

                        <td>@Html.TextBoxFor(model => model.Nome)</td>
                    </tr>
                    <tr>
                        <td>CPF</td>
                        <td>@Html.TextBoxFor(model => model.CPF)</td>
                    </tr>
                    <tr>
                        <td>Dentista</td>
                        <td>@Html.TextBoxFor(model => model.Dentista)</td>
