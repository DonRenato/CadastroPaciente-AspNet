                   @grid.GetHtml(
        tableStyle: "webGrid",
        htmlAttributes: new { id = "checkableGrid" },
        fillEmptyRows: true,
        alternatingRowStyle: "alt",
        headerStyle: "grid-header",
        footerStyle: "foot-grid",
        caption:"",
        mode: WebGridPagerModes.All,
        emptyRowCellValue: null,
        columns: new[]{
            grid.Column("Nome", header: "Nome ", style:"text-align-left"),
            grid.Column("Sobrenome", header: "Sobrenome ", style:"text-align-left"),
               grid.Column("Telefone", header: "Telefone "),
               grid.Column("Whatsapp", header: "Whatsapp "),
               grid.Column("CPF", header: "CPF "),
               grid.Column("Dentista", header: "Dentista"),
               grid.Column("", header: "Ações", format:@<text>@Html.ActionLink("Detalhes", "Details", new { id = item.PacienteID })</text>


)})
               
                    
        
                      



               
           

        
            
        
        

