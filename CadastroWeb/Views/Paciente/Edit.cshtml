                        @Html.EditorFor(model => model.Dentista, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Dentista, "", new { @class = "text-danger" })
                    </div>
                </div>

                @if (Model.Imagem != null)
                {
                    <div class="form-group">
                        <span class="control-label col-md-2">
                            <strong>
                                Imagem
                                Atual
                            </strong>
                        </span>
                        <div class="col-md-10">
                            <img src="@Url.Action("ExibirImagem","Arquivo", new {id = Model.PacienteID })" width="150" height="150" />
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <span class="control-label col-md-2">
                            <strong>
                                Imagem
                                Atual
                            </strong>
                        </span>
                        <div class="col-md-10">
